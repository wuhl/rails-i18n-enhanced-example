<h1><%= t('helpers.titles.index', model: Resource.model_name.human( :count=>2 ) ) %></h1>

<table>
  <thead>
    <tr>
      <th><%= t('activerecord.attributes.resource.first_name') %></th>
      <th><%= t('activerecord.attributes.resource.last_name') %></th>
      <th><%= t('activerecord.attributes.resource.start') %></th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @resources.each do |resource| %>
      <tr>
        <td><%= resource.first_name %></td>
        <td><%= resource.last_name %></td>
        <td><%= l resource.start %></td>
        <td><%= link_to t('helpers.links.show'), resource %></td>
        <td><%= link_to t('helpers.links.edit'), edit_resource_path(resource) %></td>
        <td><%= link_to t('helpers.links.destroy'), resource, method: :delete, data: { confirm: t('helpers.links.confirm') } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<p><%= link_to t('helpers.titles.new', model: Resource.model_name.human ), new_resource_path %></p>
